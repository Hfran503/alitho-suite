{
  "name": "@repo/database",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "prisma generate --schema=../../prisma/schema.prisma",
    "db:generate": "cd ../.. && prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "cd ../.. && prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:migrate:dev": "cd ../.. && prisma migrate dev --schema=./prisma/schema.prisma",
    "db:studio": "cd ../.. && prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "cd ../.. && tsx packages/database/src/seed.ts"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0"
  },
  "devDependencies": {
    "prisma": "^5.20.0",
    "tsx": "^4.19.1"
  }
}
