{
  "name": "calitho-suite-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "./start.sh",
    "start:dev": "turbo run start",
    "start:prod": "NODE_ENV=production USE_AWS_SECRETS=true turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "pnpm --filter @repo/database db:migrate",
    "db:generate": "pnpm --filter @repo/database db:generate",
    "db:studio": "pnpm --filter @repo/database db:studio",
    "db:seed": "pnpm --filter @repo/database db:seed",
    "secrets:setup": "./scripts/setup-secrets.sh",
    "secrets:load": "source ./scripts/load-secrets.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "turbo": "^2.1.3",
    "prettier": "^3.3.3",
    "@types/node": "^20.16.11",
    "typescript": "^5.6.3",
    "prisma": "^5.22.0"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
